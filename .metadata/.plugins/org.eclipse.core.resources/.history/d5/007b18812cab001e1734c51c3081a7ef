
public class Strategia {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Mazzo Mazzone = new Mazzo();
		
	}
}


class Carta{
	private Seme seme; //referenza in altro file
	private int numero;
	
	public Carta(Seme seme , int numero) {
		this.seme = seme;
		this.numero = numero;
	}
	
}

class Mazzo {
	private Carta[] mazzo;
	
	public Mazzo() {
		mazzo = new Carta[40]; // mazzo da 40 carte
		int numero = 0;//tengo segno della posizione nel mazzo
		//il for fa tutti i semi
		for(Seme seme : Seme.values()){
			//ci sono 13 carte per tipo
			for (int i = 0; i<=10; i++) {
				mazzo[numero] = new Carta(seme,i);
				numero++;
			}
		}
		
	}
}
